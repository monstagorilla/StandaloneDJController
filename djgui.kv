#: import main djgui
#: import DJGUI djgui

<LabelWithBackground@Label>:
    color: root.color_font
    canvas.before:
        Color:
            rgb: root.color_widget
        Rectangle:
            pos: self.pos
            size: self.size

<AudioVisualizer>:
    canvas:
        #Line:
        #    width: 1
            #points: root.line_points

DJGUI:
<DJGUI>:
    orientation: "vertical"
    spacing: 2
    padding: 2
    canvas.before:
        Color:
            rgb: 0,0,0
        Rectangle:
            pos: self.pos
            size: self.size
    LabelWithBackground:
        text: "render track1"
        size_hint: 1, None
        height: 60

    LabelWithBackground:
        text: "render track2"
        size_hint: 1, None
        height: 60

    BoxLayout:
        orientation: "horizontal"
        spacing: 2


#-------------------Deck1-----------------#
        BoxLayout:
            orientation: "vertical"
            spacing: 2

            LabelWithBackground:
                text: root.title[0]
                size_hint: 1, None
                height: 20

            AudioVisualizer:
                id: av_l
                size_hint: 1, None
                height: 30

            #track info
            BoxLayout:
                size_hint: 1, None
                height: 20
                orientation: "horizontal"
                spacing: 2
                LabelWithBackground:
                    text: root.time[0]
                    size_hint: 1, None
                    height: 20
                LabelWithBackground:
                    text: root.bpm[0]
                    size_hint: 1, None
                    height: 20
                LabelWithBackground:
                    text: "Headphones"
                    size_hint: 1, None
                    height: 20

            LabelWithBackground:
                text: "playbutton, loop etc."
                size_hint: 1, 1



#-------------------VU-Meter-----------------#
        LabelWithBackground:
            size_hint: None, 1
            width: 10

        LabelWithBackground:
            size_hint: None, 1
            width: 10

