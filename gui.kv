<LabelWithBackground@Label>:
    canvas.before:
        Color:
            rgb: root.color_widget
        Rectangle:
            pos: self.pos
            size: self.size


<GUI>:
    orientation: "vertical"
    spacing: 2
    padding: 2
    canvas.before:
        Color:
            rgb: 0,0,0
        Rectangle:
            pos: self.pos
            size: self.size
    LabelWithBackground:
        text: "render track1"
        size_hint: 1, None
        height: 60

    LabelWithBackground:
        text: "render track2"
        size_hint: 1, None
        height: 60
        color: root.color_font


    BoxLayout:
        orientation: "horizontal"
        spacing: 2


#-------------------Deck0-----------------#
        BoxLayout:
            orientation: "vertical"
            spacing: 2
            id: layout0

            Label:
                text: root.title0
                size_hint: 1, None
                height: 20

            AudioVisualizer:
                id: av_l
                size_hint: 1, None
                height: 30
                color_deck0: root.color_deck_l0
                color_deck1: root.color_deck_l1

            #track info
            BoxLayout:
                size_hint: 1, None
                height: 20
                orientation: "horizontal"
                spacing: 2
                Label:
                    text: root.time0
                    size_hint: 1, None
                    height: 20
                Label:
                    text: root.bpm0
                    size_hint: 1, None
                    height: 20
                Label:
                    text: root.pitch0
                    size_hint: 1, None
                    height: 20
                Label:
                    text: "Headphones"
                    size_hint: 1, None
                    height: 20

            LabelWithBackground:
                id: play0
                text: "playbutton, loop etc."
                size_hint: 1, 1



